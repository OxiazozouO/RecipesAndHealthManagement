<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 获得焦点状态 -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="999dp"/>
                    <gradient
                            android:type="linear"
                            android:startColor="#616161"
                            android:endColor="#5d4157"
                            android:angle="0"/>
                </shape>
            </item>
            <item
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="999dp"/>
                    <gradient
                            android:type="linear"
                            android:startColor="#516BD7"
                            android:endColor="#6DAFD6"
                            android:angle="0"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>