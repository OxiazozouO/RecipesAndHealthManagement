<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/id_add_recipe_img"
                android:layout_width="match_parent"
                android:src="@drawable/ic_add"
                android:layout_height="240dp"/>

        <TextView
                android:id="@+id/id_add_recipe_title"
                android:textSize="24dp"
                android:hint="请输入食谱标题(最多30字) *"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/id_add_recipe_name"
                android:textSize="24dp"
                android:hint="请输入食谱名字(最多30字)"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/id_add_recipe_ref"
                android:textColor="#B07300"
                android:textSize="16dp"
                android:hint="请输入食谱的简介（最多200字）"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/id_add_recipe_category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:showDivider="beginning|middle|end">

            <ImageView
                    android:id="@+id/id_add_recipe_add_category"
                    android:src="@drawable/ic_add_category"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="4dp"/>
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
                android:layout_marginTop="5dp"
                android:text="食材清单 *"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/id_add_recipe_ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        <ImageView
                android:id="@+id/id_add_recipe_add_ingredient_bnt"
                android:background="@drawable/shape_button_bg"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:padding="6dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_add"/>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/id_add_recipe_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_label7_bg">

                <TextView
                        android:id="@+id/id_add_recipe_dosage"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:layout_width="150dp"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:maxLength="13"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_convert"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>

            <LinearLayout
                    android:id="@+id/id_add_recipe_output_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_label7_bg">

                <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:id="@+id/id_add_recipe_out_dosage"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:maxLength="13"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/id_add_recipe_nutritional"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:text="所含营养素"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/id_add_recipe_nutritional_arrow"
                    android:src="@drawable/ic_left_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="90"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/id_add_recipe_nutritional_layout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_blue_1"
                    android:padding="6dp"
                    android:orientation="vertical">

                <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/id_add_recipe_positive_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignContent="flex_start"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        android:padding="8dp"
                        app:justifyContent="flex_start"
                        app:showDivider="beginning|middle|end">

                    <ImageView
                            android:background="@drawable/shape_text_2"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_yes"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="4dp"
                            android:scaleType="centerCrop"/>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/id_add_recipe_negative_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignContent="flex_start"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        android:padding="8dp"
                        app:justifyContent="flex_start"
                        app:showDivider="beginning|middle|end">

                    <ImageView
                            android:background="@drawable/shape_text_1"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_warn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="6dp"
                            android:scaleType="centerCrop"/>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/id_add_recipe_allergy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignContent="flex_start"
                        app:alignItems="center"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        android:padding="8dp"
                        app:justifyContent="flex_start"
                        app:showDivider="beginning|middle|end">

                    <ImageView
                            android:background="@drawable/shape_text_3"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_warn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="6dp"
                            android:scaleType="centerCrop"/>
                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/id_add_recipe_pie_chart_ent"
                        android:layout_width="180dp"
                        android:layout_height="180dp"/>

                <com.github.mikephil.charting.charts.PieChart
                        android:gravity="center_horizontal"
                        android:id="@+id/id_add_recipe_pie_chart_more"
                        android:layout_width="180dp"
                        android:layout_height="180dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/id_add_recipe_f1"
                            android:textSize="24dp"
                            android:textColor="#A543C8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"/>

                    <TextView
                            android:id="@+id/id_add_recipe_f2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#616161"
                            android:layout_marginRight="8dp"/>

                    <TextView
                            android:id="@+id/id_add_recipe_f3"
                            android:textSize="24dp"
                            android:textColor="#A543C8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"/>

                    <TextView
                            android:id="@+id/id_add_recipe_f4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#616161"/>
                </LinearLayout>

                <include
                        android:layout_width="120dp"
                        android:id="@+id/id_add_recipe_nutrient_chart"
                        layout="@layout/component_macro_nutrient_chart"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/id_add_recipe_nutrient_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

        </LinearLayout>

        <TextView
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:text="烹饪步骤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp">

            <ImageView
                    android:src="@drawable/ic_time"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            <TextView
                    android:layout_marginLeft="4dp"
                    android:text="总用时 "
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginLeft="4dp"
                    android:inputType="datetime"
                    android:textSize="14dp"
                    android:id="@+id/id_add_recipe_all_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/id_add_recipe_step_list"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        <ImageView
                android:id="@+id/id_add_recipe_add_step_bnt"
                android:background="@drawable/shape_button_bg"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/ic_add"/>

        <TextView
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:text="参考资料来源"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/id_add_recipe_release_info"
                android:textColor="#B07300"
                android:textSize="16dp"
                android:hint="请输入参考资料来源（最多200字） *"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/id_add_recipe_add_step_sub"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_button_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:padding="6dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:text="提  交"/>
    </LinearLayout>
</ScrollView>