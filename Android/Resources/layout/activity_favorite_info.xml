<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/id_favorite_info_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/id_favorite_info_title"
                android:text="仲夏端午，粽享新意"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#656565"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_gravity="top"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/id_favorite_info_flag"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/shape_label8_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="111"/>

            <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/id_favorite_info_count"
                    android:text="88"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/id_favorite_count"
                    android:text="个内容"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

            <TextView
                    android:gravity="right"
                    android:id="@+id/id_favorite_info_mod_time"
                    android:text="2024-11-11"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
                android:id="@+id/id_favorite_info_refer"
                android:text="又是一年端午节，粽子自然是必不可少。 说起粽子，你能想到什么样的？吃惯了甜粽或是咸粽的你，有没有尝试过其他风味呢？比如梅干菜口味的，蛋黄的，还有用西米做的水晶粽等，其实不仅粽子的味道和原料有多种变化，它的做法也是能千奇百怪哦。 这个端午，让我们一起粽享新意吧~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="13dp"
                android:textColor="#12937c"
                android:layout_marginBottom="10dp"/>

        <LinearLayout
                android:id="@+id/id_favorite_info_edit_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

            <ImageView
                    android:textSize="16dp"
                    android:src="@drawable/ic_edit"
                    android:id="@+id/id_favorite_info_open_edit"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            <ImageView
                    android:layout_gravity="right"
                    android:textSize="16dp"
                    android:src="@drawable/ic_list"
                    android:id="@+id/id_favorite_info_open_sel"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_favorite_info_main2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/id_favorite_info_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        <TextView
                android:text="删除"
                android:textColor="#FF0000"
                android:id="@+id/id_favorite_info_del"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="取消"
                android:id="@+id/id_favorite_info_close"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
            android:id="@+id/id_favorite_info_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>