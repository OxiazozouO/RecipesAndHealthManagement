<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="3dp">

    <TextView
            android:text="碳"
            android:id="@+id/id_ingredient_info_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/id_ingredient_info_author_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    
    <include
            android:id="@+id/id_ingredient_chart_progress_view"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_height="10dp"
            layout="@layout/component_progress_bar"/>

    <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <TextView
                android:text="114.514"
                android:id="@+id/id_ingredient_info_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="g"
                android:layout_marginLeft="2dp"
                android:id="@+id/id_ingredient_info_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>