<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/id_category_text"
                android:layout_marginLeft="2dp"
                android:text="id_category_text"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="@drawable/shape_blue_bg"/>

        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/id_more_text"
                android:layout_alignParentRight="true"
                android:text="查看更多>"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <include
            android:id="@+id/sr_ingredient_one"
            layout="@layout/sr_ingredient_item"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_recommend_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"/>
</LinearLayout>
