<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_fire"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/id_nutrient_edit_tdee"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:text="每日能量总耗(TDEE)"/>

                <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/id_nutrient_edit_tdee_correct"
                        android:layout_width="match_parent"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:text="每天摄取TDEE×"/>
            </LinearLayout>

            <SeekBar
                    android:id="@+id/id_nutrient_edit_tdee_correct_normal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:min="80"
                    android:max="120"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="减脂                                           － TDEE×80%"/>

    <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="温和减脂（减少肌肉流失） － TDEE×90%"/>

    <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="保持体形                                   － TDEE×100%"/>

    <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="温和增肌（减少体脂积累） － TDEE×110%"/>

    <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="增肌                                           － TDEE×120%"/>

    <TextView
            android:textColor="@color/helper_orange_red_r"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="*属于经验法则，这种简化方法能快速指导饮食规划"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_fat"/>

        <TextView
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="脂肪"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <SeekBar
                    android:id="@+id/id_nutrient_edit_fat_normal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:min="2000"
                    android:max="3000"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/id_nutrient_edit_fat_percentage"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="25.00%"/>

                <TextView
                        android:id="@+id/id_nutrient_edit_fat_requirement"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="100.0 g/天"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_carbohydrate"/>

        <TextView
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="碳水"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <SeekBar
                    android:id="@+id/id_nutrient_edit_carbohydrate_normal"
                    android:min="5000"
                    android:max="6500"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:enabled="false"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/id_nutrient_edit_carbohydrate_percentage"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="25.00%"/>

                <TextView
                        android:id="@+id/id_nutrient_edit_carbohydrate_requirement"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="100.0 g/天"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_protein"/>

        <TextView
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="蛋白质"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <SeekBar
                    android:id="@+id/id_nutrient_edit_protein_normal"
                    android:min="1000"
                    android:max="2000"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/id_nutrient_edit_protein_percentage"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="25.00%"/>

                <TextView
                        android:id="@+id/id_nutrient_edit_protein_requirement"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="100.0 g/天"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/id_nutrient_edit_protein_rni"
                android:text="推荐蛋白质摄入量 50.0 g/天 点击填入"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/shape_button_bg"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>