<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="4dp"
              android:paddingBottom="4dp">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

            <ImageView
                    android:id="@+id/id_favorite_file_url"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
                android:layout_gravity="top"
                android:id="@+id/id_favorite_flag"
                android:textColor="#FFFFFF"
                android:background="@drawable/shape_label8_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="111"/>
    </FrameLayout>


    <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/id_favorite_title"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="极速早餐 懒人必看"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/id_favorite_count"
                    android:text="88"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/id_favorite_count"
                    android:text="个内容"
                    android:layout_marginLeft="8dp"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
                android:id="@+id/id_favorite_mod_time"
                android:layout_marginTop="4dp"
                android:text="2024-11-11"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <CheckBox
            android:id="@+id/id_favorite_select"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:focusable="false"/>
</LinearLayout>