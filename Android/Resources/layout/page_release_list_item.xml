<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/id_release_list_item_url"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

        <LinearLayout
                android:layout_gravity="top|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/id_release_list_item_edit"
                    android:src="@drawable/ic_edit"
                    android:background="@drawable/shape_button_bg"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <ImageView
                    android:id="@+id/id_release_list_item_off"
                    android:src="@drawable/ic_off"
                    android:background="@drawable/shape_button_bg"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <ImageView
                    android:id="@+id/id_release_list_item_on"
                    android:src="@drawable/ic_on"
                    android:background="@drawable/shape_button_bg"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <ImageView
                    android:id="@+id/id_release_list_item_close"
                    android:src="@drawable/ic_close"
                    android:background="@drawable/shape_button_bg"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
        </LinearLayout>

        <TextView
                android:layout_gravity="right|bottom"
                android:id="@+id/id_release_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-11-11 11:11:11"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_label7_bg"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/id_release_list_item_status"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/shape_button_bg"
                android:textColor="#FFFFFF"
                android:text="审核中"
                android:textSize="18dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"/>
    </FrameLayout>

    <TextView
            android:id="@+id/id_release_list_item_title"
            android:text="标题"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/id_release_list_item_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="80"
            android:layout_centerHorizontal="true"
            android:text="1. 资料完整性检查 - 已完成; 2. 合规性审查 - 已完成; 3. 内容准确性核对 - 已完成; 4. 风险评估 - 未开始; 5. 最终决策 - 未开始"
            android:textSize="14sp"/>

    <LinearLayout
            android:id="@+id/id_release_list_item_info_sub"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_button_bg2"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细信息"
                android:textSize="14sp"/>

        <ImageView
                android:id="@+id/id_add_recipe_nutritional_arrow"
                android:src="@drawable/ic_left_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="-90"/>
    </LinearLayout>

    <LinearLayout
            android:visibility="gone"
            android:id="@+id/id_release_list_item_info_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
</LinearLayout>