<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <ImageView
                android:id="@+id/id_edit_back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_left_arrow"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:hint="编辑资料"
                    android:textColor="#110030"
                    android:textSize="24dp"/>

            <TextView
                    android:id="@+id/id_edit_userinfo_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_button_bg"
                    android:text="保存"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/id_edit_user_url"
            android:layout_marginTop="60dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/id_edit_userinfo_user_url"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_no_login"/>

        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="ID号"
                android:textColor="#333333"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/id_edit_user_id_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:background="@null"
                android:textColor="#43496A"
                android:textSize="16dp"/>
    </LinearLayout>
    <View
            android:layout_margin="4dp"
            android:background="#41000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <LinearLayout
            android:id="@+id/id_edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="visible">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_name"/>

        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="用户名"
                android:textColor="#333333"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/id_edit_user_name_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textColor="#43496A"
                android:textSize="16dp"/>

        <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_right_arrow"/>
    </LinearLayout>

    <View
            android:layout_margin="4dp"
            android:background="#41000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <LinearLayout
            android:id="@+id/id_edit_userinfo_sex"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="visible">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_sex"/>

        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/id_edit_userinfo_sex_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textColor="#43496A"
                android:textSize="16dp"/>

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_right_arrow"/>
    </LinearLayout>

    <View
            android:layout_margin="4dp"
            android:background="#41000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <LinearLayout
            android:id="@+id/id_edit_userinfo_birthday"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="visible">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_cake"/>

        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="生日"
                android:textColor="#333333"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/id_edit_userinfo_birthday_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textColor="#43496A"
                android:textSize="16dp"/>

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_right_arrow"/>
    </LinearLayout>

    <View
            android:background="#41000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
</LinearLayout>