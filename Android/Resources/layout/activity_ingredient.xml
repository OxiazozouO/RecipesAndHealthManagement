<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

            <ImageView
                    android:id="@+id/id_ingredient_img"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="300dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
                android:textSize="36dp"
                android:text="香蕉"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/id_ingredient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/id_ingredient_like"
                    android:src="@drawable/ic_no_collect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:layout_gravity="center"
                    android:id="@+id/id_ingredient_like_num"
                    android:text="111"
                    android:textSize="14dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/id_ingredient_share"
                    android:src="@drawable/ic_share"
                    android:layout_marginRight="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <ImageView
                    android:id="@+id/id_ingredient_report"
                    android:src="@drawable/ic_report"
                    android:layout_marginRight="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/id_ingredient_ref"
                android:textColor="#B07300"
                android:text="香蕉的营养价值具有降低血压、缓解抽筋、改善便秘，香蕉中含钾较高，能够起到通便，润肺化肠作用。在食用香蕉期间避免空腹，可以在饭后半个小时后食用，还可以达到减肥功效。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_blue_1"
                android:padding="6dp"
                android:orientation="vertical">

            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/id_ingredient_emoji_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="flex_start"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:showDivider="beginning|middle|end">

                <ImageView
                        android:id="@+id/id_ingredient_add_emoji"
                        android:src="@drawable/ic_add_emoji"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="4dp"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/id_ingredient_category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="flex_start"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:showDivider="beginning|middle|end">

                <ImageView
                        android:id="@+id/id_ingredient_add_category"
                        android:src="@drawable/ic_add_category"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="4dp"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/id_ingredient_positive_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="flex_start"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:padding="8dp"
                    app:justifyContent="flex_start"
                    app:showDivider="beginning|middle|end">

                <ImageView
                        android:background="@drawable/shape_text_2"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_yes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/id_ingredient_negative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="flex_start"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:padding="8dp"
                    app:justifyContent="flex_start"
                    app:showDivider="beginning|middle|end">

                <ImageView
                        android:background="@drawable/shape_text_1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_warn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="6dp"
                        android:scaleType="centerCrop"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/id_ingredient_allergy_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="flex_start"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:padding="8dp"
                    app:justifyContent="flex_start"
                    app:showDivider="beginning|middle|end">

                <ImageView
                        android:background="@drawable/shape_text_3"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_warn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="6dp"
                        android:scaleType="centerCrop"/>
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

        <TextView
                android:layout_marginTop="5dp"
                android:text="营养素"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                    <LinearLayout
                            android:id="@+id/id_ingredient_input_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/shape_label4_bg">

                        <TextView
                                android:id="@+id/id_ingredient_dosage"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="100dp"
                                android:textColor="#FFFFFF"
                                android:maxLines="1"
                                android:maxLength="13"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_convert"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>

                    <LinearLayout
                            android:id="@+id/id_ingredient_output_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/shape_label4_bg">

                        <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="10"
                                android:id="@+id/id_ingredient_out_dosage"
                                android:textColor="#FFFFFF"
                                android:maxLines="1"
                                android:maxLength="13"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <TextView
                            android:text="≈"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:text="10"
                            android:id="@+id/id_ingredient_info_dosage"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:text="可食部"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/id_ingredient_refresh"
                    android:src="@drawable/ic_refresh"
                    android:layout_marginLeft="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/id_ingredient_add_to_physical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_button_bg"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

            <ImageView
                    android:background="@drawable/shape_button_bg"
                    android:src="@drawable/ic_add"
                    android:padding="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:padding="3dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_vertical"
                    android:text="添加到饮食记录"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/id_pie_chart_ent"
                    android:layout_width="180dp"
                    android:layout_height="180dp"/>

            <com.github.mikephil.charting.charts.PieChart
                    android:gravity="center_horizontal"
                    android:id="@+id/id_pie_chart_more"
                    android:layout_width="180dp"
                    android:layout_height="180dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:id="@+id/id_ingredient_f1"
                        android:textSize="24dp"
                        android:textColor="#A543C8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>

                <TextView
                        android:id="@+id/id_ingredient_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#616161"
                        android:layout_marginRight="8dp"/>

                <TextView
                        android:id="@+id/id_ingredient_f3"
                        android:textSize="24dp"
                        android:textColor="#A543C8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"/>

                <TextView
                        android:id="@+id/id_ingredient_f4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#616161"/>
            </LinearLayout>

            <include
                    android:layout_width="120dp"
                    android:id="@+id/id_ingredient_nutrient_chart"
                    layout="@layout/component_macro_nutrient_chart"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:id="@+id/id_ingredient_nutrient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        <include
                android:id="@+id/id_ingredient_comment"
                layout="@layout/com_comment"/>
    </LinearLayout>
</ScrollView>