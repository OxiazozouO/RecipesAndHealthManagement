<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/id_add_step_ingredient_1"
                android:layout_width="24dp"
                android:background="@drawable/shape_button_bg5"
                android:layout_height="24dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/id_add_step_ingredient_2"
                android:layout_width="24dp"
                android:background="@drawable/shape_button_bg5"
                android:layout_height="24dp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/id_add_step_ingredient_3"
            android:textSize="14dp"
            android:text="食材名称"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/id_add_step_ingredient_4"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:hint="请输入食材所占时间比"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_label7_bg"/>

    <TextView
            android:id="@+id/id_add_step_ingredient_5"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
</LinearLayout>